{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "functions": {
    "index.py": {
      "memory": 512,  // Adjust memory based on your app's needs
      "maxDuration": 10 // Max duration for requests in seconds
    }
  }
}
